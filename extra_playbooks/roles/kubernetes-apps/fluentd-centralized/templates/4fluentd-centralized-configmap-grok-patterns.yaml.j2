kind: ConfigMap
metadata:
  name: {{boss__fluentd__centralized__shared_name}}-grok-patterns
  namespace: {{boss__fluentd__centralized__namespace_name}}
  labels:
    k8s-app: {{boss__fluentd__centralized__shared_name}}
data:
