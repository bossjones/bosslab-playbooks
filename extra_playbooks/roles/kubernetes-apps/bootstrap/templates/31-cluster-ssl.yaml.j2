data:
  tls.crt: {{CLUSTER_SSL_CERT_PUBLIC}}
  tls.key: {{CLUSTER_SSL_KEY_PUBLIC}}
kind: Secret
metadata:
  name: cluster-ssl-public
  namespace: canary
type: kubernetes.io/tls
---
apiVersion: v1
data:
  tls.crt: {{CLUSTER_SSL_CERT_CORP}}
  tls.key: {{CLUSTER_SSL_KEY_CORP}}
kind: Secret
metadata:
  name: cluster-ssl-corp
  namespace: monitoring
type: kubernetes.io/tls
