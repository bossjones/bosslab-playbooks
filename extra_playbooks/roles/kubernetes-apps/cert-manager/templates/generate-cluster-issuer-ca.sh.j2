#!/usr/bin/env bash

# SOURCE: https://docs.cert-manager.io/en/latest/tasks/issuers/setup-ca.html

# Generate a CA private key
$ openssl genrsa -out {{ boss__certmanager__manifest_path }}/ca.key 2048

# Create a self signed Certificate, valid for 10yrs with the 'signing' option set
$ openssl req -x509 -new -nodes -key {{ boss__certmanager__manifest_path }}/ca.key -subj "/CN=*.{{domain_root}}" -days 3650 -reqexts v3_req -extensions v3_ca -out {{ boss__certmanager__manifest_path }}/ca.crt


