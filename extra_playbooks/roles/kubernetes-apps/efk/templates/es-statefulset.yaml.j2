# RBAC authn and authz
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: elasticsearch-logging
  namespace: kube-system
  labels:
    k8s-app: elasticsearch-logging
    kubernetes.io/cluster-service: "true"
    addonmanager.kubernetes.io/mode: Reconcile
    boss-part-of: efk
---
kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: elasticsearch-logging
  labels:
    k8s-app: elasticsearch-logging
    kubernetes.io/cluster-service: "true"
    addonmanager.kubernetes.io/mode: Reconcile
    boss-part-of: efk
rules:
- apiGroups:
  - ""
  resources:
  - "services"
  - "namespaces"
  - "endpoints"
  verbs:
  - "get"
---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  namespace: kube-system
  name: elasticsearch-logging
  labels:
    k8s-app: elasticsearch-logging
    kubernetes.io/cluster-service: "true"
    addonmanager.kubernetes.io/mode: Reconcile
    boss-part-of: efk
subjects:
- kind: ServiceAccount
  name: elasticsearch-logging
  namespace: kube-system
  apiGroup: ""
roleRef:
  kind: ClusterRole
  name: elasticsearch-logging
  apiGroup: ""
---
# Elasticsearch deployment itself
apiVersion: apps/v1beta1
kind: StatefulSet
metadata:
  name: elasticsearch-logging
  namespace: kube-system
  labels:
    k8s-app: elasticsearch-logging
    version: v5.6.2
    kubernetes.io/cluster-service: "true"
    addonmanager.kubernetes.io/mode: Reconcile
    boss-part-of: efk
spec:
  serviceName: elasticsearch-logging
  # ORIG # replicas: 2
  replicas: 1
  selector:
    matchLabels:
      k8s-app: elasticsearch-logging
      version: v5.6.2
  template:
    metadata:
      labels:
        k8s-app: elasticsearch-logging
        version: v5.6.2
        kubernetes.io/cluster-service: "true"
    spec:
      volumes:
      - name: elasticsearch-logging
        persistentVolumeClaim:
          claimName: elasticsearch-pvc
      # SOURCE: https://kubernetes.io/docs/concepts/configuration/assign-pod-node/
      # nodeSelector:
      #   kubernetes.io/hostname: "borg-worker-02"
      serviceAccountName: elasticsearch-logging
      containers:
      # - image: k8s.gcr.io/elasticsearch:v5.6.2
      - image: bossjones/elasticsearch:v5.6.2
        imagePullPolicy: Always
        securityContext:
          # runAsNonRoot: true
          # runAsUser: 65534
          privileged: true
        name: elasticsearch-logging
        resources:
          # need more cpu upon initialization, therefore burstable class
          limits:
            cpu: 1000m
            memory: 4048Mi
            # memory: 2400Mi
          requests:
            cpu: 100m
            memory: 2350Mi
            # memory: 2350Mi
            # memory: 2000Mi
        ports:
        - containerPort: 9200
          name: db
          protocol: TCP
        - containerPort: 9300
          name: transport
          protocol: TCP
        - containerPort: 1099
          name: jmx
          protocol: TCP
        volumeMounts:
        - name: elasticsearch-logging
          mountPath: /data
        env:
        - name: "NAMESPACE"
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
          # http.cors.enabled: true
          # http.cors.allow-origin
          # NOTE: Needed for: https://github.com/mobz/elasticsearch-head
        # - name: HTTP_CORS_ENABLED
        #   value: "true"
        # - name: HTTP_CORS_ALLOW_ORIGIN
        #   value: "*"
        - name: MINIMUM_MASTER_NODES
          value: "1"
        - name: ES_JAVA_OPTS
          # value: "-Xms1024m -Xmx1024m"
          # value: "-Xms4048m -Xmx4048m"
          value: "-Xms2048m -Xmx2048m"
          # value: "-Xms256m -Xmx256m"
        # - name: ES_HEAP_SIZE
        #   # value: "-Xms1024m -Xmx1024m"
        #   value: "1g"
        #   # chmod g+rwx esdatadir
        #   # chgrp 1000 esdatadir
      initContainers:
      - image: alpine:3.6
        command: ["/sbin/sysctl", "-w", "vm.max_map_count=262144"]
        name: elasticsearch-logging-init
        securityContext:
          privileged: true
