---
kind: Service
apiVersion: v1
metadata:
  name: traefik-ingress-service-external
  namespace: {{boss__traefik__internal__namespace_name}}
  labels:
    k8s-app: traefik-ingress-lb
spec:
  selector:
    k8s-app: traefik-ingress-lb-external
  externalTrafficPolicy: Local
  ports:
    - protocol: TCP
      port: 80
      name: web
    - protocol: TCP
      port: 443
      name: https
    - protocol: TCP
      port: 8080
      name: admin
  type: LoadBalancer
  loadBalancerIP: 192.168.1.21
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: traefik-ingress-lb-external
  namespace: {{boss__traefik__internal__namespace_name}}
  labels:
    traffic-type: internal
spec:
  rules:
  - host: traefik-ext.internal.carlosedp.com
    http:
      paths:
      - path: /
        backend:
          serviceName: traefik-ingress-service-external
          servicePort: admin

